{
  "name": "snake-classic-standalone",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "homepage": "https://laurence77.github.io/snake/",
  "dependencies": {
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.9",
    "typescript": "^5.4.0"
  },
  "scripts": {
    "dev": "esbuild src/main.ts --bundle --outfile=public/bundle.js --servedir=public --sourcemap --watch",
    "dev:enhanced": "esbuild src/main-enhanced.ts --bundle --outfile=public/bundle.js --servedir=public --sourcemap --watch",
    "dev:ultimate": "esbuild src/main-ultimate.ts --bundle --outfile=public/bundle.js --servedir=public --sourcemap --watch",
    "build": "npm run build:js && npm run build:assets",
    "build:enhanced": "npm run build:enhanced:js && npm run build:assets",
    "build:ultimate": "npm run build:ultimate:js && npm run build:assets",
    "build:js": "esbuild src/main.ts --bundle --outfile=public/bundle.js --minify --sourcemap",
    "build:enhanced:js": "esbuild src/main-enhanced.ts --bundle --outfile=public/bundle.js --minify --sourcemap",
    "build:ultimate:js": "esbuild src/main-ultimate.ts --bundle --outfile=public/bundle.js --minify --sourcemap",
    "build:assets": "cp manifest.webmanifest public/ 2>/dev/null || true"
  }
}
